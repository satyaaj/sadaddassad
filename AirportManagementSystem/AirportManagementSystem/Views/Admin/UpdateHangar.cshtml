@model AirportManagementSystem.Models.Planes.HangarDetails
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "UpdateHangar";
}

<h2>UpdateHangar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>HangarDetails</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.HangerName)


    <div class="form-group">
        @Html.LabelFor(model => model.HangerName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HangerName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HangerName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AdminID, "AdminID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" value="@User.Identity.GetUserName()" readonly="readonly" class="form-control" />
            @Html.ValidationMessageFor(model => model.AdminID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Terminal, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.Terminal, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Terminal, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Hangar")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
